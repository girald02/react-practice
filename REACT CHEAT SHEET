------------------------------------------
//With Arrow Function:
------------------------------------------
hello = () => {
  return "Hello World!";
}

------------------------------------------
//Arrow Functions Return Value by Default:
------------------------------------------
hello = () => "Hello World!";

------------------------------------------
//Arrow Function With Parameters:
------------------------------------------
hello = (val) => "Hello " + val;
<script>
      hello = (val) => "Hello " + val;
      document.write(hello('Girald'));
</script>

------------------------------------------
//Arrow Function Without Parentheses:
------------------------------------------
hello = val => "Hello " + val;


